heading_prefix          "\\rule[2.5pt]{2mm}{2pt}\\textbf{~~"
heading_suffix          "~~}\\rule[3pt]{10mm}{1pt}\\nopagebreak\n"
headings_flag           1
preamble                "\\begin{theindex}\\begin{raggedright}\\small\n"
postamble               "\n\n\\end{raggedright}\\end{theindex}\n"
